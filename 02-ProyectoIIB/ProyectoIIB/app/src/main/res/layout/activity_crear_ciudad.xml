<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".CrearCiudadActivity">

    <EditText
        android:id="@+id/nombreCiudad"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/poblacionCiudad"
        app:layout_constraintEnd_toEndOf="@+id/poblacionCiudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/poblacionCiudad"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.845" />

    <Button
        android:id="@+id/GuardarCiudadBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Guardar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/poblacionCiudad"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Poblacion (Millones)"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/esCapital"
        app:layout_constraintEnd_toEndOf="@+id/esCapital"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/esCapital" />

    <EditText
        android:id="@+id/esCapital"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Â¿Es capital? si/no"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tieneAereoPuerto"
        app:layout_constraintEnd_toEndOf="@+id/tieneAereoPuerto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tieneAereoPuerto" />

    <EditText
        android:id="@+id/tieneAereoPuerto"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Nombre Aereopuerto"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/GuardarCiudadBt"
        app:layout_constraintEnd_toEndOf="@+id/GuardarCiudadBt"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/GuardarCiudadBt" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="225dp"
        android:layout_height="53dp"
        android:background="@color/color1"
        android:backgroundTint="#00FFFFFF"
        android:text="Nueva Tarea"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="153dp"
        android:layout_height="140dp"
        android:background="@drawable/tarea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

</androidx.constraintlayout.widget.ConstraintLayout>