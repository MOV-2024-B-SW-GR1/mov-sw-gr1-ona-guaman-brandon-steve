<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCiudadActivity">

    <EditText
        android:id="@+id/nombreCiudad"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/poblacionCiudad"
        app:layout_constraintEnd_toEndOf="@+id/poblacionCiudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/poblacionCiudad"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.658" />

    <Button
        android:id="@+id/GuardarCiudadBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"
        android:text="Guardar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/poblacionCiudad"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Poblacion (Millones)"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/esCapital"
        app:layout_constraintEnd_toEndOf="@+id/esCapital"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/esCapital" />

    <EditText
        android:id="@+id/esCapital"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Â¿Es capital? si/no"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tieneAereoPuerto"
        app:layout_constraintEnd_toEndOf="@+id/tieneAereoPuerto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tieneAereoPuerto" />

    <EditText
        android:id="@+id/tieneAereoPuerto"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:hint="Nombre Aereopuerto"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/GuardarCiudadBt"
        app:layout_constraintEnd_toEndOf="@+id/GuardarCiudadBt"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/GuardarCiudadBt" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="412dp"
        android:layout_height="54dp"
        android:background="#673AB7"
        android:text="Nueva Ciudad"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>